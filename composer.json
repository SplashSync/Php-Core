{
    "name":                 "splash/phpcore",
    "description":          "Splash Foundation Module for All Php Applications",

    "type":                 "package",    
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    "license":              "MIT",

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": { 
            "Splash\\": "",
            "Splash\\Local\\": "../../../Resources"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]        
    },
    
    "autoload-dev": {
        "psr-4": {
            "Splash\\Local\\": "Resources/grumphp", 
            "Splash\\Tests\\": "Tests/" 
        }
    },

    "require": {
        "php":                              "^7.4|^8.0",
        "ext-simplexml":                    "*",
        "ext-xmlwriter":                    "*",
        "ext-libxml":                       "*"
    },

    "require-dev": {
        "ext-xml":                          "*",
        "ext-soap":                         "*",
        "ext-curl":                         "*",
        "ext-apcu":                         "*",
        "splash/console":                   "dev-master",
        "badpixxel/php-sdk":                "~2.0"
    },
    
    "archive": {
        "exclude": ["/docs"]
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
