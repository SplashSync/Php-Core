{
    "name":                 "splash/phpcore",
    "description":          "Splash Fundation Module for All Php Applications",

    "type":                 "package",    
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    "license":              "MIT",

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": { 
            "Splash\\": "",
            "Splash\\Local\\": "../../../Resources"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]        
    },
    
    "autoload-dev": {
        "psr-4": {
            "Splash\\Local\\": "Resources/grumphp", 
            "Splash\\Tests\\": "Tests/" 
        }
    },

    "require": {
        "php":                              "^5.6|^7.0"
    },
    
    "require-dev": {
        "phpunit/phpunit":                  "~5.0|~6.0|~7.0",
        "composer/composer":                "^1.5",
        "j13k/yaml-lint":                   "^1.1",
        "jakub-onderka/php-parallel-lint":  "^1.0",
        "phpmd/phpmd":                      "^2.6",
        "phpro/grumphp":                    "^0.14.0",
        "sclable/xml-lint":                 "^0.2.4",
        "sebastian/phpcpd":                 ">3.0",
        "seld/jsonlint":                    "^1.7",
        "sensiolabs/security-checker":      "^5.0",
        "friendsofphp/php-cs-fixer":        ">2.10", 
        "squizlabs/php_codesniffer":        "^3.2",
        "phpstan/phpstan-shim":             "~0.10",
        "phpstan/phpstan-phpunit":          "~0.10"
    }
    
    
}
