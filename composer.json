{
    "name":                 "splash/phpcore",
    "description":          "Splash Fundation Module for All Php Applications",

    "type":                 "package",    
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    "license":              "MIT",

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": { 
            "Splash\\": "",
            "Splash\\Local\\": "../../../Resources"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]        
    },
    
    "autoload-dev": {
        "psr-4": {
            "Splash\\Local\\": "Resources/grumphp", 
            "Splash\\Tests\\": "Tests/" 
        }
    },

    "require": {
        "php":                              "^7.2"
    },
    
    "require-dev": {
        "splash/console":                   "dev-master",        
        "badpixxel/php-sdk":                "dev-main"
    },
    
    "archive": {
        "exclude": ["/docs"]
    }
}
