{
    "name": "splash/phpcore",
    "description": "Splash Core Module for Php Applications",

    "license": "GPL",

    "require": {
        "php": "^5.6"
    },
    
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    
    "autoload": {
        "psr-4": { 
            "Splash\\": "",
            "Splash\\Local\\": "../../../Resources"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    
    "autoload-dev": {
        "psr-4": { "Splash\\Tests\\": "Tests/" }
    }
    
}